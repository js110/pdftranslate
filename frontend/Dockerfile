FROM node:22-alpine AS build

WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm install

COPY . .
ARG VITE_API_BASE=http://localhost:8000/v1
ARG VITE_DEFAULT_PRIMARY_ID=deepseek-main
ARG VITE_DEFAULT_PRIMARY_MODEL=deepseek-chat
ARG VITE_DEFAULT_PRIMARY_BASE_URL=https://api.deepseek.com/v1
ARG VITE_DEFAULT_PRIMARY_API_KEY=
ARG VITE_DEFAULT_BACKUP_ID=deepseek-backup
ARG VITE_DEFAULT_BACKUP_MODEL=deepseek-chat
ARG VITE_DEFAULT_BACKUP_BASE_URL=https://api.deepseek.com/v1
ARG VITE_DEFAULT_BACKUP_API_KEY=
ENV VITE_API_BASE=${VITE_API_BASE}
ENV VITE_DEFAULT_PRIMARY_ID=${VITE_DEFAULT_PRIMARY_ID}
ENV VITE_DEFAULT_PRIMARY_MODEL=${VITE_DEFAULT_PRIMARY_MODEL}
ENV VITE_DEFAULT_PRIMARY_BASE_URL=${VITE_DEFAULT_PRIMARY_BASE_URL}
ENV VITE_DEFAULT_PRIMARY_API_KEY=${VITE_DEFAULT_PRIMARY_API_KEY}
ENV VITE_DEFAULT_BACKUP_ID=${VITE_DEFAULT_BACKUP_ID}
ENV VITE_DEFAULT_BACKUP_MODEL=${VITE_DEFAULT_BACKUP_MODEL}
ENV VITE_DEFAULT_BACKUP_BASE_URL=${VITE_DEFAULT_BACKUP_BASE_URL}
ENV VITE_DEFAULT_BACKUP_API_KEY=${VITE_DEFAULT_BACKUP_API_KEY}
RUN npm run build

FROM nginx:1.28-alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
